<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>
  
  <div class="container text-center">
    <div class="row">
      <div class="col">
        
      </div>
        <div class="col-6">

            <h2 style="font-family: 'Ubuntu Mono', monospace;"> - Edit Faculty profile - </create></h2>


              <form action="/updateFaculty/<%= faculty.initial_name %>" method="POST">

                  <div class="d-grid gap-3">

                      <div >
                          <input value= "<%= faculty.initial_name %>" class="form-control form-control-sm" type="text" placeholder="initail name" aria-label=".form-control-sm example" name="initial_name" required>
                        </div>
                        
                        <div>
                          <input value= "<%= faculty.full_name %>" class="form-control form-control-sm" type="text" placeholder="Full Name" aria-label=".form-control-sm example" name="full_name" required>
              
                        </div>
              
                        <div >
                          <input value= "<%= faculty.email %>" class="form-control form-control-sm" type="email" placeholder="G-suite" aria-label=".form-control-sm example" name="email" required>
              
                        </div>
              
                        <div >
                          <input value= " <%= faculty.room_number %>" class="form-control form-control-sm" type="text" placeholder="UB-room number" aria-label=".form-control-sm example" name="room_number">
              
                        </div>
            
            
                        <div class="form-group">
                          <select value= "<%= faculty.research_interest %>" class="form-control form-control-sm"  id="Interest" name="research_interest">
                            <option selected>- Thesis Interest - </option>
                            <option value="AI">AI</option>
                            <option value="ML"> ML</option>
                            <option value="NLP">NLP</option>
                            <option value="Blockchain">Blockchain</option>
                            <option value="Deep Learning">Deep Learning</option>
                            <option value="Big Data">Big Data</option>
                            <option value="Cloud Computing">Cloud Computing</option>
                            <option value="Neural Network">Neural Network</option>
                            <option value="Data Science">Data Science</option>
                          </select>
                        </div>
            
                        <div class="form-group">
                          <select value= "<%= faculty.role %>" class="form-control form-control-sm" id="Role" name="role">
                            <option selected>- Select Role - </option>
                            <option value="Both Supervisor & Co-supervosor">Both Supervisor & Co-supervosor</option>
                            <option value="Co-supervosor only"> Co-supervosor only</option>
                            <option value="Supervisor only">Supervisor only</option>
                          </select>
                        </div>
            
            
                        <div class="form-group">
                          <select value= "<%= faculty.available_status %>" class="form-control form-control-sm" id="Available" name="available_status">
                            <option selected>- Available Status - </option>
                            <option value="Spring">Spring</option>
                            <option value="Summer">Summer</option>
                            <option value="Fall">Fall</option>
                           
                          </select>
                        </div>
            
                        <div class="form-group">
                          <select value= "<%= faculty.type %>" class="form-control form-control-sm" id="Type" name="type">
                            <option selected>- Select Type - </option>
                            <option value="Thesis / Project / Internship">Thesis / Project / Internship</option>
                            <option value="Thesis / Project">Thesis / Project</option>
                            <option value="Thesis">Thesis</option>
                          </select>
                        </div>
            
                        <div class="form-group ">
            
                          <textarea value= "<%= faculty.bio %>" class="form-control form-control-sm" id="exampleFormControlTextarea1" rows="3" placeholder="- write something about yourself -"></textarea>
                        </div>
            
                        <div >
                          <button class="btn btn-outline-success btn-sm" style =width:550px>Update</button>
            
                        </div>
          
                  
          
                  </div>
      
              </form>

        </div>
      <div class="col">
       
      </div>
    </div>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>
  
  <div class="container text-center">
    <div class="row">
      <div class="col">
        
      </div>
        <div class="col-6">

            <h2 style="font-family: 'Ubuntu Mono', monospace;"> - edit student profile - </create></h2>

            <% if (action == 'edit') { %>

                <form action="/studentList/updateStudent/<%= student.id %>" method="POST">

                    <div class="d-grid gap-3">
            
                    <div >
                        <input value= "<%= student.id %>" class="form-control form-control-sm" type="text" placeholder="ID" aria-label=".form-control-sm example" name="id" required>
                    </div>
                    
                    <div>
                        <input value= "<%= student.name %>" class="form-control form-control-sm" type="text" placeholder="Name" aria-label=".form-control-sm example" name="name" required>
            
                    </div>
            
                    <div >
                        <input value= "<%= student.department %>" class="form-control form-control-sm" type="text" placeholder="Department" aria-label=".form-control-sm example" name="department" required>
                    
                    </div>
            
                    <div >
                        <input value= "<%= student.gsuite %>" class="form-control form-control-sm" type="email" placeholder="G-suite" aria-label=".form-control-sm example" name="email" required>
            
                    </div>
            
                    <div >
                        <input value= "<%= student.attempted_credit %>" class="form-control form-control-sm" type="number" placeholder="Attempted Credit" aria-label=".form-control-sm example" name="a_credit" required>
            
                    </div>
            
                    <div >
                        <input value= "<%= student.earned_credit %>" class="form-control form-control-sm" type="number" placeholder="Earned Credit" aria-label=".form-control-sm example" name="e_credit" required>
            
                    </div>
            
                    <div >
                        <input value= "<%= student.completed_semester %>" class="form-control form-control-sm" type="number" placeholder="Attempted semester" aria-label=".form-control-sm example" name="a_semester" required>
            
                    </div>
            
                    <div >        
                        <input value= "<%= student.current_cgpa %>" class="form-control form-control-sm" type="float" placeholder="Current CGPA" aria-label=".form-control-sm example" name="cgpa" required>
                    </div>
            
                    <div >
                        <button value="edit" class="btn btn-outline-success btn-sm" style =width:550px>Update</button>
            
                    </div>
            
                    </div>
        
                </form>
            
                <% } else { %>
                <p>There are no student info to display...</p>
            <% } %>
            
        </div>
      <div class="col">
       
      </div>
    </div>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>